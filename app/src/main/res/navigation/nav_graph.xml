<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ltl.recipes.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" >
        <action
            android:id="@+id/mainFragmentToRecipeDetailFragment"
            app:destination="@id/recipeDetailFragment"/>
        <action
            android:id="@+id/mainFragmentToNewRecipeFragment"
            app:destination="@id/newRecipeFragment" />
        <action
            android:id="@+id/mainFragmentToLoginFragment"
            app:destination="@id/loginFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.ltl.recipes.ui.main.RecipeDetailFragment"
        android:label="fragment_recipe_detail"
        tools:layout="@layout/fragment_recipe_detail" >
        <action
            android:id="@+id/recipeDetailFragmentToMainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true"/>
        <argument
            android:name="recipeAttr"
            app:argType="com.ltl.recipes.data.recipe.Recipe" />
    </fragment>
    <fragment
        android:id="@+id/newRecipeFragment"
        android:name="com.ltl.recipes.ui.NewRecipeFragment"
        android:label="fragment_new_recipe"
        tools:layout="@layout/fragment_new_recipe" >
        <action
            android:id="@+id/newRecipeFragmentToMainFragment"
            app:popUpTo="@id/mainFragment"
            />
        <action
            android:id="@+id/newRecipeFragmentToAddIngredientFragment"
            app:destination="@id/addIngredientFragment"
            app:popUpTo="@id/addIngredientFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/newRecipeFragmentToEditIngredientFragment"
            app:destination="@id/editIngredientFragment"
            app:popUpTo="@id/editIngredientFragment"
            app:popUpToInclusive="true"
            />
        <argument
            android:name="recipeId"
            app:argType="string"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/addIngredientFragment"
        android:name="com.ltl.recipes.ui.AddIngredientFragment"
        android:label="AddIngredientFragment" >
        <action
            android:id="@+id/addIngredientFragmentToNewRecipeFragment"
            app:popUpTo="@id/newRecipeFragment"
            >
        </action>
    </fragment>
    <fragment
        android:id="@+id/editIngredientFragment"
        android:name="com.ltl.recipes.ui.EditIngredientFragment"
        android:label="EditIngredientFragment" >
        <argument
            android:name="ingredientEditExtra"
            app:argType="com.ltl.recipes.ingredient.Ingredient"
            />
        <action
            android:id="@+id/editIngredientFragmentToNewRecipeFragment"
            app:popUpTo="@id/newRecipeFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ltl.recipes.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/loginFragmentToMainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/loginFragmentToRegistrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.ltl.recipes.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/registrationFragmentToMainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>